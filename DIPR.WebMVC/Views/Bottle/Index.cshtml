@model IEnumerable<DIPR.Models.Bottle.BottleListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Bottles</h2>

<p>
    @Html.ActionLink("Add a Bottle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Consumed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            <p>Actions</p>
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <th>
        @Html.DisplayFor(modelItem => item.Contents)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Consumed)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Notes)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.BottleID }) |
        @Html.ActionLink("Details", "Details", new { id = item.BottleID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.BottleID })
    </td>
</tr>
}

</table>
