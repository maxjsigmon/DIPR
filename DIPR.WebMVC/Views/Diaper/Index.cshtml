@model IEnumerable<DIPR.Models.Diaper.DiaperListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Diapers</h2>

<p>
    @Html.ActionLink("Add a Diaper", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Soiled)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            <p>Actions</p>
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>
    
    <td>
        @Html.DisplayFor(modelItem => item.Soiled)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Notes)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.DiaperID }) |
        @Html.ActionLink("Details", "Details", new { id = item.DiaperID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.DiaperID })
    </td>
</tr>
}

</table>
