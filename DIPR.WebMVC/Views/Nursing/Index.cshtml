@model IEnumerable<DIPR.Models.Nursing.NursingListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Nursing</h2>

<p>
    @Html.ActionLink("Create Nursing Data", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeFed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeedingSide)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            <p>Actions</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TimeFed)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FeedingSide)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Notes)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.NursingID }) |
        @Html.ActionLink("Details", "Details", new { id = item.NursingID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.NursingID })
    </td>
</tr>
    }

</table>
